#include QMK_KEYBOARD_H

// Timing variables - EXACTLY like your script
static uint32_t start_moving_forward = 0;
static uint32_t start_moving_back = 0;
static uint32_t start_moving_left = 0;
static uint32_t start_moving_right = 0;
static uint32_t move_forward_timer = 0;
static uint32_t move_back_timer = 0;
static uint32_t move_left_timer = 0;
static uint32_t move_right_timer = 0;
static uint32_t jump_timer = 0;

// State variables - EXACTLY like your script
static bool moving_forward = false;
static bool moving_back = false;
static bool moving_left = false;
static bool moving_right = false;
static bool last_moving_forward = false;
static bool last_moving_back = false;
static bool last_moving_left = false;
static bool last_moving_right = false;
static bool hop = false;

// NEW: Counter-strafe control variables
static bool enable_counter = true;       // Default enabled
static uint16_t counter_delay = 80;      // 80ms as requested
static uint8_t counter_mode = 0;         // 0=80ms, 1=70ms, 2=90ms, 3=Custom

// Counterstrafe function for A key (left) - MODIFIED for your needs
void counterstrafe_left(uint32_t hold_duration) {
    if (enable_counter && !hop) {
        if (hold_duration < 150) {
            return;  // Quick tap - no counterstrafe (same as your script)
        } else {
            // MODIFIED: Use configurable delay instead of fixed 80ms
            register_code(KC_D);
            wait_ms(counter_delay);  // Using configurable delay
            unregister_code(KC_D);
        }
    }
}

// Counterstrafe function for D key (right) - MODIFIED for your needs
void counterstrafe_right(uint32_t hold_duration) {
    if (enable_counter && !hop) {
        if (hold_duration < 150) {
            return;  // Quick tap - no counterstrafe (same as your script)
        } else {
            // MODIFIED: Use configurable delay instead of fixed 80ms
            register_code(KC_A);
            wait_ms(counter_delay);  // Using configurable delay
            unregister_code(KC_A);
        }
    }
}

// NEW: F1-F3 control functions
void handle_f1_press(void) {
    // F1: Toggle counter-strafe ON/OFF
    enable_counter = !enable_counter;
    
    // Visual feedback using Scroll Lock
    if (enable_counter) {
        tap_code(KC_SCRL);
        wait_ms(100);
        tap_code(KC_SCRL);
    } else {
        tap_code(KC_PAUS);
        wait_ms(100);
        tap_code(KC_PAUS);
    }
}

void handle_f2_press(void) {
    // F2: Cycle through delay modes
    counter_mode = (counter_mode + 1) % 4;
    
    switch (counter_mode) {
        case 0:  // Normal (80ms)
            counter_delay = 80;
            break;
        case 1:  // Fast (70ms)
            counter_delay = 70;
            break;
        case 2:  // Slow (90ms)
            counter_delay = 90;
            break;
        case 3:  // Custom (100ms)
            counter_delay = 100;
            break;
    }
    
    // Visual feedback using Num Lock
    tap_code(KC_NUM);
    wait_ms(150);
    tap_code(KC_NUM);
}

void handle_f3_press(void) {
    // F3: Toggle between Normal and Custom
    if (counter_mode == 0) {
        counter_mode = 3;  // Switch to Custom
        counter_delay = 100;
    } else {
        counter_mode = 0;  // Switch to Normal
        counter_delay = 80;
    }
    
    // Visual feedback using Caps Lock
    tap_code(KC_CAPS);
    wait_ms(100);
    tap_code(KC_CAPS);
}

// Matrix scan for timer checks - EXACTLY like your script
void matrix_scan_user(void) {
    // Jump timer check (1200ms)
    if (hop && timer_elapsed32(jump_timer) >= 1200) {
        hop = false;
    }
    
    // Move forward timer check (300ms)
    if (last_moving_forward && timer_elapsed32(move_forward_timer) >= 300) {
        last_moving_forward = false;
    }
    
    // Move back timer check (300ms)
    if (last_moving_back && timer_elapsed32(move_back_timer) >= 300) {
        last_moving_back = false;
    }
    
    // Move left timer check (300ms)
    if (last_moving_left && timer_elapsed32(move_left_timer) >= 300) {
        last_moving_left = false;
    }
    
    // Move right timer check (300ms)
    if (last_moving_right && timer_elapsed32(move_right_timer) >= 300) {
        last_moving_right = false;
    }
}

// Key processing - MODIFIED to add F1-F3 controls
bool process_record_user(uint16_t keycode, keyrecord_t *record) {
    // Handle F1, F2, F3 controls
    if (record->event.pressed) {
        switch (keycode) {
            case KC_F1:
                handle_f1_press();
                return false;
            case KC_F2:
                handle_f2_press();
                return false;
            case KC_F3:
                handle_f3_press();
                return false;
        }
    }
    
    // The rest is EXACTLY like your script
    switch (keycode) {
        case KC_W: // Forward
            if (record->event.pressed) {
                // Key down
                if (!moving_forward) {
                    start_moving_forward = timer_read32();
                }
                moving_forward = true;
            } else {
                // Key up
                moving_forward = false;
                uint32_t hold_duration = timer_elapsed32(start_moving_forward);
                
                last_moving_forward = true;
                move_forward_timer = timer_read32();
                
                if (!last_moving_back) {
                    // Your original forward counterstrafe - UNCHANGED
                    if (enable_counter && !hop) {
                        if (hold_duration >= 150) {
                            register_code(KC_S);
                            wait_ms(80);
                            unregister_code(KC_S);
                        }
                    }
                }
            }
            return true;
            
        case KC_S: // Back
            if (record->event.pressed) {
                // Key down
                if (!moving_back) {
                    start_moving_back = timer_read32();
                }
                moving_back = true;
            } else {
                // Key up
                moving_back = false;
                uint32_t hold_duration = timer_elapsed32(start_moving_back);
                
                last_moving_back = true;
                move_back_timer = timer_read32();
                
                if (!last_moving_forward) {
                    // Your original back counterstrafe - UNCHANGED
                    if (enable_counter && !hop) {
                        if (hold_duration >= 150) {
                            register_code(KC_W);
                            wait_ms(80);
                            unregister_code(KC_W);
                        }
                    }
                }
            }
            return true;
            
        case KC_A: // Left
            if (record->event.pressed) {
                // Key down
                if (!moving_left) {
                    start_moving_left = timer_read32();
                }
                moving_left = true;
            } else {
                // Key up
                moving_left = false;
                uint32_t hold_duration = timer_elapsed32(start_moving_left);
                
                // MODIFIED: Added last_moving_left timer like your other keys
                last_moving_left = true;
                move_left_timer = timer_read32();
                
                if (!last_moving_right) {
                    // MODIFIED: Using new counterstrafe_left function
                    counterstrafe_left(hold_duration);
                }
            }
            return true;
            
        case KC_D: // Right
            if (record->event.pressed) {
                // Key down
                if (!moving_right) {
                    start_moving_right = timer_read32();
                }
                moving_right = true;
            } else {
                // Key up
                moving_right = false;
                uint32_t hold_duration = timer_elapsed32(start_moving_right);
                
                last_moving_right = true;
                move_right_timer = timer_read32();
                
                if (!last_moving_left) {
                    // MODIFIED: Using new counterstrafe_right function
                    counterstrafe_right(hold_duration);
                }
            }
            return true;
            
        case KC_SPC: // Jump
            if (record->event.pressed) {
                hop = true;
                jump_timer = timer_read32();
            }
            return true;
    }
    
    return true;
}

// Your exact keymap - UNCHANGED
const uint16_t PROGMEM keymaps[][MATRIX_ROWS][MATRIX_COLS] = {
    [0] = LAYOUT_fullsize_ansi(
        KC_ESC, KC_F1, KC_F2, KC_F3, KC_F4, KC_F5, KC_F6, KC_F7, KC_F8, KC_F9, KC_F10, KC_F11, KC_F12, KC_PSCR, KC_SCRL, KC_PAUS,
        KC_GRV, KC_1, KC_2, KC_3, KC_4, KC_5, KC_6, KC_7, KC_8, KC_9, KC_0, KC_MINS, KC_EQL, KC_BSPC, KC_INS, KC_HOME, KC_PGUP, KC_NUM, KC_PSLS, KC_PAST, KC_PMNS,
        KC_TAB, KC_Q, KC_W, KC_E, KC_R, KC_T, KC_Y, KC_U, KC_I, KC_O, KC_P, KC_LBRC, KC_RBRC, KC_BSLS, KC_DEL, KC_END, KC_PGDN, KC_P7, KC_P8, KC_P9, KC_PPLS,
        KC_CAPS, KC_A, KC_S, KC_D, KC_F, KC_G, KC_H, KC_J, KC_K, KC_L, KC_SCLN, KC_QUOT, KC_ENT, KC_P4, KC_P5, KC_P6,
        KC_LSFT, KC_Z, KC_X, KC_C, KC_V, KC_B, KC_N, KC_M, KC_COMM, KC_DOT, KC_SLSH, KC_RSFT, KC_UP, KC_P1, KC_P2, KC_P3, KC_PENT,
        KC_LCTL, KC_LGUI, KC_LALT, KC_SPC, KC_RALT, KC_RGUI, KC_APP, KC_RCTL, KC_LEFT, KC_DOWN, KC_RGHT, KC_P0, KC_PDOT
    )
};

// Initialization
void keyboard_post_init_user(void) {
    // Initialize counter-strafe settings
    enable_counter = true;
    counter_delay = 80;  // 80ms as requested
    counter_mode = 0;    // Normal mode
}
